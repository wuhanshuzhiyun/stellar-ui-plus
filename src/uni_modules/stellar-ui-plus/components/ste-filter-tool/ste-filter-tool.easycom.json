{
    "name": "ste-filter-tool",
    "description": "筛选选项",
    "example": "<ste-filter-tool></ste-filter-tool>",
    "tutorial": "https://stellar-ui.intecloud.com.cn/?projectName=stellar-ui-plus&menu=%E7%BB%84%E4%BB%B6&active=ste-filter-tool",
    "attributes": [
        {
            "name": "v-model:value",
            "description": "当前选中值，支持双向绑定",
            "type": "FilterValue[]",
            "default": "[]"
        },
        {
            "name": "activeColor",
            "description": "激活状态颜色",
            "type": "string",
            "default": "#0275FF"
        },
        {
            "name": "inactiveColor",
            "description": "非激活状态颜色",
            "type": "string",
            "default": "#555A61"
        },
        {
            "name": "filterType",
            "description": "筛选类型",
            "type": "string",
            "default": "button"
        },
        {
            "name": "data",
            "description": "筛选数据源，详细配置见文档",
            "type": "FilterItem[]",
            "default": "[]"
        },
        {
            "name": "showCategory",
            "description": "是否显示左侧的分类栏",
            "type": "boolean",
            "default": "true"
        },
        {
            "name": "[event]confirm",
            "description": "点击确认按钮时触发",
            "type": "(values: FilterValue[]) => void",
            "params": [
                {
                    "name": "values",
                    "description": "当前所有选中的值"
                }
            ]
        },
        {
            "name": "[event]reset",
            "description": "点击重置按钮时触发",
            "type": "() => void",
            "params": []
        },
        {
            "name": "[event]itemClick",
            "description": "点击任意筛选项时触发（实时）",
            "type": "(item: FilterValue) => void",
            "params": [
                {
                    "name": "item",
                    "description": "当前操作的筛选项数据"
                }
            ]
        }
    ]
}
